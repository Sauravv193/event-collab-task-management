{
  "buildCommand": "cd frontend && npm install --no-optional --ignore-scripts && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install --no-optional --ignore-scripts",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://event-collab-backend.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
